extends layout

block content
    p name: #{agent.name}
    p email: #{agent.email}

    p.lead Friends
    ul
        - for (var i = 0; i < friends.length; i++)
            li #{friends[i].name} - #{friends[i].email}
            ul
                - for (var j = 0; j < friends[i].hisPermissions.length; j++)
                    li 
                        | #{friends[i].hisPermissions[j].email}, 
                        if friends[i].hisPermissions[j].read
                            | read  
                        if friends[i].hisPermissions[j].write 
                            | write 
                        if friends[i].hisPermissions[j].execute
                            | execute
