extends layout

block content
    if (agent)
        p.lead Try logging in, #{agent.name}
    form(action="/login", method="post")
        div
            label Email:
            if (agent)
                input(type="text", name="username", value="#{agent.email}")
            else
                input(type="text", name="username")
        div
            label Password:
            input(type="password", name="password")
        div
            input(type="submit", value="Submit")
    p
        small Hint - bob@example.com:secret

